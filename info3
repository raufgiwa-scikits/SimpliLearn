import streamlit as st
import pandas as pd

# Sample initial DataFrame
data = {'Name': ['Alice', 'Bob', 'Charlie'],
        'Age': [25, 30, 35],
        'City': ['New York', 'Los Angeles', 'Chicago']}
df = pd.DataFrame(data)

# Streamlit app for displaying and modifying the DataFrame
st.title('Interactive DataFrame Editor')

# Display DataFrame with an option to edit rows
st.write("Edit the DataFrame below:")

# Editable grid
edited_df = df.copy()

for index, row in edited_df.iterrows():
    name = st.text_input(f"Name (Row {index})", row['Name'], key=f"name_{index}")
    age = st.number_input(f"Age (Row {index})", min_value=0, max_value=100, value=row['Age'], key=f"age_{index}")
    city = st.text_input(f"City (Row {index})", row['City'], key=f"city_{index}")
    edited_df.loc[index] = [name, age, city]

# Save button
if st.button('Save Changes'):
    st.write("Updated DataFrame:")
    st.write(edited_df)

st.write("Original DataFrame:")
st.write(df)
