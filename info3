import pandas as pd
import ipywidgets as widgets
from IPython.display import display

# Sample DataFrame
data = {'Name': ['Alice', 'Bob', 'Charlie'],
        'Age': [25, 30, 35],
        'City': ['New York', 'Los Angeles', 'Chicago']}
df = pd.DataFrame(data)

# Function to display the DataFrame and allow edits
def display_dataframe():
    print(df)

# Function to add a row to the DataFrame
def add_row(name, age, city):
    global df
    new_row = {'Name': name, 'Age': age, 'City': city}
    df = df.append(new_row, ignore_index=True)
    display_dataframe()

# Text input widgets for new row data
name_input = widgets.Text(value='', placeholder='Enter name', description='Name:')
age_input = widgets.IntText(value=0, description='Age:')
city_input = widgets.Text(value='', placeholder='Enter city', description='City:')

# Button to add the row
add_button = widgets.Button(description="Add Row")

# Action for button click
def on_button_click(b):
    add_row(name_input.value, age_input.value, city_input.value)

add_button.on_click(on_button_click)

# Display the widgets and initial DataFrame
display(name_input, age_input, city_input, add_button)
display_dataframe()
